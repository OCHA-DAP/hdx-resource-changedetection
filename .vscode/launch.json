    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run change detection module",
            "type": "debugpy",
            "request": "launch",
            "module": "hdx.resource.changedetection.__main__",
            "justMyCode": false,
            "args": [
                // "--save",
                "--use-redis",
                "--revise",
                // "--specific-task-code=a",
            ],
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/src",
                "REDIS_CONNECTION_URL": "redis://redis:6379/2?decode_responses=True",
                "LOG_FILE_PATH": "/var/log/resource_changedetection.log",
                "LOG_LEVEL": "INFO",
            }
        }
    ]
}